              <div class="input-box">
                <i class="fas fa-lock"></i>
                <input type="password" name="password2" id="SPassword2" placeholder="Confirm password" required>
                <span id="confirmPasswordError"></span>
              </div>
              <div class="button input-box">
                <input type="submit" value="Submit">
              </div>
