		<script>
			$(document).ready(function () {
				// Handle click event on Remove link
				$('.remove-item-link').click(function (e) {
					e.preventDefault();
					var itemId = $(this).data('item-id');
					$('#remove-product').attr('data-item-id', itemId);
				});

				// Handle click event on Remove button in the modal
				$('#remove-product').click(function () {
					var itemId = $(this).data('item-id');
					cartRemove(itemId);
				});

				// Function to remove item from cart
				function cartRemove(itemId) {
					// Send AJAX request to remove item from cart
					$.ajax({
						url: '/cart/remove/' + itemId,
						method: 'GET',
						success: function (response) {
							// Handle success response
							console.log('Item removed from cart');
							// Reload the page to update the cart
							location.reload();
						},
						error: function (xhr, status, error) {
							// Handle error response
							console.error(error);
							alert('Error removing item from cart');
						}
					});
				}
			});
		</script>


