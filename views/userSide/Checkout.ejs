                                                            <td colspan="2"> Category Offer <span
                                                                    class="text-muted"></span> :</td>
                                                            <td class="text-end" id="category-discount">- ₹ <%=
                                                                    totalCategoryDiscountAmount %>
                                                            </td>
                                                        </tr>
