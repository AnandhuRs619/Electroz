                                                        <td>
                                                            <div class="avatar-md bg-light rounded p-1">
                                                                <img src="/productimages/<%= data.productId.image[0] %>"
                                                                    alt="" class="img-fluid d-block">
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <h5 class="fs-14"><a href="#" class="text-dark">
                                                                    <%=data.productId.name%>
                                                                </a></h5>
                                                            <p class="text-muted mb-0">₹ <%=data.realPrice%>
                                                            </p>
                                                        </td>
                                                        <td class="text-end">₹ <%=data.price%>
                                                        </td>
                                                    </tr>
                                                    <input type="hidden" name="product" value="<%=data._id%>">
                                                    <%})%>
