                                                                    <span class="fs-14 mb-2 d-block">
                                                                        <%= data.name %>
                                                                    </span>
                                                                    <span
                                                                        class="text-muted fw-normal text-wrap mb-1 d-block">
                                                                        <%= data.addressline,data.street %>
                                                                    </span>
                                                                    <span class="text-muted fw-normal d-block">
                                                                        <%= data.city
