            <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
            <script>
            document.addEventListener("DOMContentLoaded", function () {
                // Retrieve the data from the data attribute of the chart container
                const data = JSON.parse(document.getElementById('customer_impression_charts').getAttribute('data-colors'));
            
                // Create the ApexCharts instance
                const chart = new ApexCharts(document.querySelector("#customer_impression_charts"), {
                    series: [data.orders, data.earnings, data.refunds],
                    labels: ["Orders", "Earnings", "Refunds"],
                    colors: data.colors,
                    chart: {
                        type: "bar",
                        height: 350,
                        toolbar: {
                            show: false
                        }
                    },
                    plotOptions: {
                        bar: {
                            horizontal: false,
                            columnWidth: "55%",
                            endingShape: "rounded"
                        },
                    },
                    dataLabels: {
                        enabled: false
                    },
                    stroke: {
                        show: true,
                        width: 2,
                        colors: ["transparent"]
                    },
                    xaxis: {
                        categories: ["Orders", "Earnings", "Refunds"]
                    },
                    yaxis: {
                        title: {
                            text: "Counts"
                        }
                    },
                    fill: {
                        opacity: 1
                    },
                    tooltip: {
                        y: {
                            formatter: function (val) {
                                return "$ " + val + "k"
                            }
                        }
                    }
                });
            
                // Render the chart
                chart.render();
            });
</script>




